{
  "dashboard": {
    "title": "Game Server Observability",
    "tags": ["game-server", "production"],
    "timezone": "UTC",
    "panels": [
      {
        "title": "Request Rate",
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])"
          }
        ],
        "type": "graph"
      },
      {
        "title": "Request Latency (p99)",
        "targets": [
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket[5m]))"
          }
        ],
        "type": "graph"
      },
      {
        "title": "Error Rate",
        "targets": [
          {
            "expr": "rate(http_requests_total{status=~\"5..\"}[5m])"
          }
        ],
        "type": "graph"
      },
      {
        "title": "Frame Time (ms)",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(game_frame_time_seconds_bucket[1m])) * 1000"
          }
        ],
        "type": "graph"
      },
      {
        "title": "Memory Usage",
        "targets": [
          {
            "expr": "process_resident_memory_bytes / (512 * 1024 * 1024) * 100"
          }
        ],
        "type": "gauge",
        "thresholds": "60,80"
      },
      {
        "title": "CPU Usage",
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total[5m]) * 100"
          }
        ],
        "type": "gauge",
        "thresholds": "60,80"
      },
      {
        "title": "Active Connections",
        "targets": [
          {
            "expr": "game_websocket_connections"
          }
        ],
        "type": "stat"
      },
      {
        "title": "Total Actors",
        "targets": [
          {
            "expr": "game_actors_total"
          }
        ],
        "type": "stat"
      },
      {
        "title": "Pod Status",
        "targets": [
          {
            "expr": "up{job=\"game-server\"}"
          }
        ],
        "type": "stat"
      },
      {
        "title": "Collision Duration (ms)",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(game_collision_duration_seconds_bucket[1m])) * 1000"
          }
        ],
        "type": "graph"
      }
    ]
  }
}
